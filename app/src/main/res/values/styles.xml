<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityMainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconPadding">@dimen/main_activity_padding_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_for_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_layout_height</item>
        <item name="android:lineHeight">@dimen/activity_main_line_height_size_text</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ActivitySettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/twenty_one_dp</item>
        <item name="android:paddingHorizontal">@dimen/main_screen_padding_left_right</item>
        <item name="android:textSize">@dimen/settings_screen</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
   </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIconTint">@color/black_for_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="EditTextActivitySearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingStart">@dimen/edit_text_icon</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:background">@drawable/edit_text_corner_light</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawablePadding">@dimen/main_margin_top_bottom</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:textSize">@dimen/settings_screen</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="imageButtonEditTextActivitySearch">
        <item name="android:padding">@dimen/edit_text_icon</item>
        <item name="android:tint">@color/grey</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:src">@drawable/clear_icon_light</item>
        <item name="backgroundTint">@color/edit_text_color</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="trackNameItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/settings_screen</item>
        <item name="android:layout_weight">400</item>
        <item name="android:lineHeight">@dimen/activity_settings_line_height_size_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="trackArtistAndTimeItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_weight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">12.89sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="trackIconArrowForwardItemStyle">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:src">@drawable/arrow_forward_icon</item>
        <item name="android:tint">@color/grey</item>
        <item name="android:layout_marginEnd">@dimen/edit_text_padding_start</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="placeholderErrorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="placeholderErrorImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginHorizontal">120dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="placeholderErrorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">22.27sp</item>
        <item name="android:textColor">@color/black_for_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="placeholderErrorButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/black_for_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lineHeight">16.41sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>