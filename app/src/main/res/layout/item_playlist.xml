<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    style="@style/FragmentBackgroundStyle">

    <ImageView
        android:id="@+id/cover_playlist_rw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/playlist_title_rw"
        style="@style/title_and_counter_tracks_playlist_rw_style"
        tools:text = "Best songs 2021"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cover_playlist_rw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/counter_songs_playlist_rw"
        style="@style/title_and_counter_tracks_playlist_rw_style"
        tools:text = "98 треков"
        app:layout_constraintTop_toBottomOf="@id/playlist_title_rw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>