<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/image_size_album_track"
        android:layout_height="@dimen/image_size_album_track"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="@dimen/main_margin_top_bottom"
        android:scaleType="center"
        android:src="@drawable/ic_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="14dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/playlist_name"
            style="@style/trackNameItemStyle"
            tools:text="Best songs 2021"/>

        <TextView
            android:id="@+id/playlist_counter_tracks"
            style="@style/trackArtistAndTimeItemStyle"
            tools:text="98 треков"/>
    </LinearLayout>
</LinearLayout>