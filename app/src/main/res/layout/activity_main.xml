<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/MainStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_screen_padding_left_right"
    android:paddingEnd="@dimen/main_screen_padding_left_right"
    tools:context=".ui.mainactivity.MainActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        android:titleTextColor="@color/white"
        android:layout_marginStart="@dimen/activity_main_toolbar_margin"
        android:layout_marginEnd="@dimen/activity_main_toolbar_margin"
        android:layout_marginBottom="@dimen/edit_text_padding_start"
        android:title="@string/app_name"/>



    <com.google.android.material.button.MaterialButton
        style="@style/ActivityMainButtonStyle"
        android:layout_marginTop="@dimen/edit_text_padding_start"
        android:id="@+id/search"
        android:text="@string/search"
        android:layout_marginBottom="@dimen/main_margin_top_bottom"
        app:icon="@drawable/search_icon"/>

    <com.google.android.material.button.MaterialButton
        style="@style/ActivityMainButtonStyle"
        android:id="@+id/media_library"
        android:layout_marginTop="@dimen/main_margin_top_bottom"
        android:layout_marginBottom="@dimen/main_margin_top_bottom"
        android:text="@string/media_library"
        app:icon="@drawable/library_icon"/>

    <com.google.android.material.button.MaterialButton
        style="@style/ActivityMainButtonStyle"
        android:id="@+id/settings"
        android:layout_marginTop="@dimen/main_margin_top_bottom"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon"/>
</LinearLayout>