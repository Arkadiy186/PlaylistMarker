<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".SettingsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_to_main"
                style="@style/ActivitySettingsImageButtonStyle"
                android:layout_marginEnd="12dp"
                android:src="@drawable/arrow_back_icon"
                android:foreground="?attr/selectableItemBackground"
                tools:ignore="ButtonContrast,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:fontFamily="@font/ys_display_medium"
                android:textFontWeight="500"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/main_screen_text_size" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        style="@style/ActivitySettingsLinearLayoutStyle">

        <TextView
            style="@style/ActivitySettingsTextStyle"
            android:text="@string/dark_theme"/>

        <Switch
            android:id="@+id/switch_dark_theme"
            android:layout_width="@dimen/activity_settings_size_icon"
            android:layout_height="@dimen/activity_settings_size_icon"
            android:contentDescription="@string/dark_theme_icon"/>
    </LinearLayout>

    <LinearLayout
        style="@style/ActivitySettingsLinearLayoutStyle">

        <TextView
            style="@style/ActivitySettingsTextStyle"
            android:text="@string/share_application"/>

        <ImageButton
            style="@style/ActivitySettingsImageButtonStyle"
            android:src="@drawable/share_icon"
            android:contentDescription="@string/share_application_icon"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/ActivitySettingsLinearLayoutStyle">

        <TextView
            style="@style/ActivitySettingsTextStyle"
            android:text="@string/message_support"/>

        <ImageButton
            style="@style/ActivitySettingsImageButtonStyle"
            android:src="@drawable/support_icon"
            android:contentDescription="@string/share_application_icon" />
    </LinearLayout>

    <LinearLayout
        style="@style/ActivitySettingsLinearLayoutStyle">

        <TextView
            style="@style/ActivitySettingsTextStyle"
            android:text="@string/user_agreement"/>

        <ImageButton
            style="@style/ActivitySettingsImageButtonStyle"
            android:src="@drawable/arrow_forward_icon"
            android:contentDescription="@string/user_agreement_icon" />
    </LinearLayout>
</LinearLayout>
